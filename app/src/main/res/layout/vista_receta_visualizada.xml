<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/fondo"
        android:fontFamily="@font/bethany_elingston"
        android:text="Receta Visualizada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="65dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/fondo_detalle_receta"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nombrerecetavisual"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="Nombre Receta"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/bethany_elingston"
                android:layout_alignParentStart="true"/>

            <Button
                android:id="@+id/btn_volver_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:text="Volver" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imagenrecetaVisual"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:paddingVertical="10dp"
            android:src="@drawable/fondo_item_receta" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_item_receta"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Descripcion:"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/descrecetavisual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:ems="10"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Ingredientes:"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/ingredientesvisual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="2dp"
                android:ems="10"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Paso a Paso:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/pasoapvisual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="2dp"
                android:ems="10"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Link:"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/linkvisual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="2dp"
                android:ems="10"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btn_favorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Favorito" />

            <Button
                android:id="@+id/btn_comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:text="Comentarios" />
        </RelativeLayout>
    </LinearLayout>



</FrameLayout>