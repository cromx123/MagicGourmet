<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/fondo"
        android:text="Editar Receta"
        android:fontFamily="@font/bethany_elingston"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/fondo">

        <Button
            android:id="@+id/btnAcceptmodReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Confirmar"/>

        <Button
            android:id="@+id/btnCancelmodReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Cancelar"/>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:columnCount="2">
        <TextView
            android:id="@+id/textnom_receta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Nombre:"
            android:textColor="@color/black"
            android:labelFor="@+id/nom_receta"
            android:layout_row="0"
            android:layout_column="0" />
        <EditText
            android:id="@+id/nom_receta"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:text=""
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/descreceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n:"
            android:textColor="@color/black"
            android:labelFor="@+id/desc_receta"
            android:layout_row="1"
            android:layout_column="0" />
        <EditText
            android:id="@+id/desc_receta"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_row="1"
            android:layout_column="1"/>
        <TextView
            android:id="@+id/pasoapaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso a paso:"
            android:textColor="@color/black"
            android:labelFor="@+id/paso_receta"
            android:layout_row="2"
            android:layout_column="0" />
        <EditText
            android:id="@+id/paso_receta"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_row="2"
            android:layout_column="1"/>

    </GridLayout>
    <Button
        android:id="@+id/btningresarI_receta"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="Ingresar Imagen"/>
    <Button
        android:id="@+id/btningresarV_receta"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="Ingresar Video"/>

</LinearLayout>